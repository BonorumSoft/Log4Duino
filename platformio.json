{
	"name": "BLESender",
	"version": "1.0.0",
	"description": "Libary for sending temperature and specific gravity via ibeacon",
  	"keywords": "Arduino, esp32, espressif32",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/BonorumSoft/BLESender"
	},
	"authors":
	{
		"name": "Bonorum",
		"email": "github_account@bonorum.company",
		"url": "https://github.com/BonorumSoft/BLESender"
	},
	"license": "Creative Commons CC-BY-NC",
	"frameworks": ["arduino"],
	"platforms": ["espressif32"],
	"build": {
		"unflags": ["-fno-exceptions", "-std=gnu++11"],
		"flags": ["-fexceptions", "-std=gnu++17"]
	},
	"export": {
		"include": [
			"include/*.hxx",
			"src/*.cpp",
			"LICENSE",
			"Makefile",
			"README.md"
		],
		"exclude": [
			"src/main.cpp"
		]
	}
}